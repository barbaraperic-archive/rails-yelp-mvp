
<h1>Restaurants</h1>
<p><%= link_to 'Add a restaurant', new_restaurant_path, class: "btn btn-primary mt-4" %></p>
<div class="row">
  <% @restaurants.each do |restaurant| %>
    <div class="card m-3" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= restaurant.name %></h5>
        <h6 class="card-subtitle mb-2 text-muted">Address: <%= restaurant.address %></h6>
        <h6 class="card-subtitle mb-2 text-muted">Phone number: <%= restaurant.phone_number %></h6>
        <%= link_to 'Show', restaurant, class: "card-link" %>
      </div>
    </div>
  <% end %>
</div>
